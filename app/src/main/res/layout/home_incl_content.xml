<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/home_bgd_red"
    >
    
    <ImageView
        android:id="@+id/heart"
        android:layout_width="349dp"
        android:layout_height="220dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/heart_full"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
        />
    
    <com.eutechpro.smshelp.customviews.TextViewFont
        android:id="@+id/status_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:lineSpacingExtra="8sp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:padding="@dimen/activity_horizontal_margin"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:font="Roboto-Bold.ttf"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heart" tools:text="Sledece slanje sms je ..."
        />
    
    <com.eutechpro.smshelp.customviews.TextViewFont
        android:id="@+id/status_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        tools:text="@string/not_scheduled_status_description"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="8sp"
        android:padding="@dimen/activity_horizontal_margin"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:font="Roboto-Thin.ttf"
        app:layout_constraintBottom_toTopOf="@+id/tmp_schedule_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_message"
        app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.07999998"
        />
    
    <com.eutechpro.smshelp.customviews.ButtonFont
        android:id="@+id/tmp_schedule_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/main_btn"
        tools:text="Da, zelim da pomognem"
        android:textColor="#ffffff"
        app:font="Roboto-Thin.ttf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>
